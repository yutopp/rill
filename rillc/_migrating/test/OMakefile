.PHONY: unit_test test clean

########################################################################
# Subdirectories.
# You may want to include some subdirectories in this project.
# If so, define the subdirectory targets and uncomment this section.
#

# .SUBDIRS:

########################################################################
# OCaml configuration.
# Delete this section if you are not building OCaml files.
#

################################################
# Configuration.  You may want to modify any of these configuration
# variables.
#

MENHIR_ENABLED = true

#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true

#
OCAMLPACKS[] =
   oUnit
   batteries
   stdint
   ocamlgraph
   loga

if $(equal $(COVERAGE), true)
   OCAMLPACKS += bisect_ppx
   export

#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
OCAMLINCLUDES += $(dir ../src)

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
# NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
# BYTE_ENABLED = $(not $(OCAMLOPT_EXISTS))

#
# Various options
#

# OCAMLCFLAGS   +=
OCAMLOPTFLAGS += -annot
# OCAML_LINK_FLAGS +=
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Build an OCaml program
#

FILES[] =
   syntax_test
   semantics_test

#
PROGRAM = test_bin

OCAML_LIBS += ../src/rillc
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS +=
#

OCamlProgram($(PROGRAM), $(FILES))

########################################################################
#

test: unit_test

unit_test: $(PROGRAM)
    ./$(PROGRAM)

clean:
    rm -f *~ *.opt *.cmi *.cmx *.cmt *.cmti *.cmp *.cmxa *.omc *.annot \
          *.o *.a *.out *.s *.bc *.log *.cache $(PROGRAM)
